{
	"manifest_version": 2,
	"name": "demo-show-005-devtools 测试",
	"version": "1.0",
	"description": "demo-show-005-devtools 测试",
	"author": "bjlhx15",
	"icons": {
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "popup.html"
	},
	// 会一直常驻的后台JS或后台页面
	"background": {
		// 2种指定方式，如果指定JS，那么会自动生成一个背景页
		//"page": "background.html"
		"scripts": ["js/background.js"]
	},
	// devtools页面入口，注意只能指向一个HTML文件，不能是JS文件
	"devtools_page": "devtools.html"
}