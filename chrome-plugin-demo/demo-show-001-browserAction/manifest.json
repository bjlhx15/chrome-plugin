{
	// 清单文件的版本，这个必须写，而且必须是2
	"manifest_version": 2,
	// 插件的名称
	"name": "demo-show-001-browserAction",
	// 插件的版本
	"version": "1.0.0",
	// 插件描述
	"description": "demo-show-001-browserAction演示",
	// 图标，一般全部用一个尺寸的也没问题
	"icons":
	{
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	"browser_action": 
	{
		"default_icon": "img/icon.png",
		"default_popup": "popup.html"
	},
	"background":
	{
		"scripts": ["js/background.js"]
	}
}